extends ../layouts/master.pug
include ../mixins/tabs.pug

block content
  #content.section--primary(tabindex='0')
    .container
      h1
        small Email preferences
        span Manage your settings and personal details
        span.context Update your personal information and the frequency of our emails
  +tabs('user_details')
  section.section--wide
    .container
      .block--border__bottom
        h2 Change your email address
        form(action='', method='post')
          fieldset
            label(for='email') Email address
            if sessionErrors
              for error in sessionErrors
                p.message--error #{error.message}
              input#email(type='email', name='email', required, autocapitalize='off' autocorrect='off', value=USER.email_address)
          button.btn--primary(type='submit') Change email address
      .block--border__bottom
        p Would you like to remove your details from our system?
        a.btn--ghost--primary(href='/user/delete') Yes, delete me
